# One day for image files
<FilesMatch ".(jpg|jpeg|png|gif|ico|webp)$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>

# 4 hours for scripts
<FilesMatch ".(css|js)$">
    Header set Cache-Control "max-age=14400, public"
</FilesMatch>

# deny access to git folder
RedirectMatch 404 /\.git

# deny direct access
RedirectMatch 404 /cronjobs
RedirectMatch 404 /development
RedirectMatch 404 /include
RedirectMatch 404 /pages
